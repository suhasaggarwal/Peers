{
  "name": "@cloudpss/peers",
  "version": "0.2.4",
  "description": "CloudPSS p2p framework",
  "repository": "https://github.com/CloudPSS/peers",
  "author": "CloudPSS",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "browser": {
    "./dist/esm/polyfill": "./dist/esm/polyfill_browser.js",
    "./dist/cjs/polyfill": "./dist/cjs/polyfill_browser.js"
  },
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ext .js,.ts .",
    "start": "yarn clean && tsc --watch",
    "build": "yarn clean && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc --outDir dist/esm --module ESNext --target ESNext",
    "prepublishOnly": "yarn build",
    "clean": "rimraf dist"
  },
  "prettier": "@cloudpss/prettier-config",
  "commitlint": {
    "extends": "@cloudpss"
  },
  "devDependencies": {
    "@cloudpss/commitlint-config": "^1.1.0",
    "@cloudpss/eslint-config": "^1.1.0",
    "@cloudpss/lint-staged-config": "^1.1.0",
    "@cloudpss/prettier-config": "^1.1.0",
    "@cloudpss/tsconfig": "^1.1.0",
    "husky": "^7.0.4",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@cloudpss/proxy-agent": "^0.3.0-alpha.24",
    "@cloudpss/ubjson": "^0.3.0-alpha.24",
    "@types/simple-peer": "^9.11.3",
    "request": "^2.88.2",
    "rxjs": "^7.4.0",
    "simple-peer": "^9.11.0",
    "socket.io-client": "^4.3.0",
    "tslib": "^2.3.1",
    "type-fest": "^2.5.0",
    "wrtc": "^0.4.7"
  }
}
